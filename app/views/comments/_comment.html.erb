<div class="col-md-12 comment-full">
    <div class="">
        
        <div class="col-md-1 news-user-avatar"><%= link_to (gravatar_for comment.user, size: 45), comment.user %></div>

        <div class="col-md-11">

            <div class="row blog-post-info">
                <div class="col-md-12">
                    <h5 class="col-md-2"><%= link_to comment.user.name, comment.user %></h5>
                    <h5 class="col-md-1 col-md-offset-9"><%= link_to "reply", '#' %></h5>
                </div>
            </div>

            <div class="row blog-post-info">
                <div class="col-md-12">

                    <h6 class="col-md-2"><%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %></h6>

                </div>
            </div>

        </div>

    </div>

    <div class="row ">
        <div class="col-md-12 comments-content">
        
            <%= @post.comments.first.content%>

        </div>
    </div>

</div>